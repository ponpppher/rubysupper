<h1>sign up</h1>

<%= form_with(model:@user, local:true) do | f | %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_digest %>
  <%= f.password_field :password_digest %>
  <%= f.submit "create account" %>

<% end %>
