<div class = "page_title">
  <h2>ImageFeeds</h2>
</div>

<div class = "feed_table" align = "center">
  <table>
    <tbody>
      <% @feed.each do | feed | %>
        <tr class = "user_name">
          <td>user:<strong><%= feed.user.name %></strong></td>
        </tr>
        <tr class = "table_content">
          <td class="img-thumbnail">image:<%= image_tag feed.image.url %></td>
          <td>content:<strong><%= feed.content %></strong></td>
        </tr>

        <tr class="btn btn-default">
          <td><%= link_to 'edit', edit_feed_path(feed.id) %></td>
        </tr>
        <tr class="btn btn-default">
          <td><%= link_to 'destroy', feed_path(feed.id), method: :delete, data: {confirm: 'do you really want to delete this?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
